<script src="./js/signup.js"></script>
<section class="vh-100">
    <div class="mask d-flex align-items-center gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Konto erstellen</h2>
                            <form action="/signup" method="POST" class="needs-validation" novalidate>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="firstnameSignup">Vorname</label>
                                    <input type="text" id="firstnameSignup" name="firstname" class="form-control form-control-lg" required/>
                                    <div class="invalid-feedback">
                                        Bitte geben Sie ihren Vornamen ein.
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="lastnameSignup">Nachname</label>
                                    <input type="text" id="lastnameSignup" name="lastname" class="form-control form-control-lg" required/>
                                    <div class="invalid-feedback">
                                        Bitte geben Sie ihren Nachnamen ein.
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="gradeSignup">Klasse</label>
                                    <input type="text" id="gradeSignup" name="grade"  class="form-control form-control-lg" required/>
                                    <div class="invalid-feedback">
                                        Bitte geben Sie ihre Klasse ein.
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="passwordSignup">Passwort</label>
                                    <input type="password" id="passwordSignup" name="password" class="form-control form-control-lg" required/>
                                    <div class="invalid-feedback">
                                        Die Passwörter stimmen nicht überein.
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="passwordCheckSignup">Passwort wiederholen</label>
                                    <input type="password" id="passwordCheckSignup" name="passwordCheck" class="form-control form-control-lg" required/>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="termsOfUseSignup" required/>
                                    <label class="form-check-label" for="termsOfUseSignup">
                                        Ich  stimme  den  <a href="#!" class="text-body"><u>Nutzungsbedingungen</u></a>  zu
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" value="Submit"
                                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Registrieren</button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">Schon registriert? <a href="/login"
                                class="fw-bold text-body"><u>Hier anmelden</u></a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>