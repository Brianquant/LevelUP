<script>
    //Check which nav-link is active
    document.addEventListener('DOMContentLoaded', function () {
        var currentPage = window.location.pathname;
        const actionButton = document.getElementById('actionButtonNav');

        if (currentPage === '/login') {
            actionButton.innerHTML = "Registrieren"
            actionButton.addEventListener('click', function(e) {
            window.location.href = '/signup';
            });
        } else if (currentPage === '/signup') {
            actionButton.innerHTML = "Anmelden"
            actionButton.addEventListener('click', function(e) {
            window.location.href = '/login';
            });
        } else {
            actionButton.innerHTML = "Abmelden"
            actionButton.addEventListener('click', function(e) {
            window.location.href = '/logout';
            });
        }

        //Give the active attribute to active nav-link
        document.querySelectorAll(".nav-link").forEach((link) => {
            var linkPath = link.getAttribute("href");

            // Check if the current URL ends with the link's path
            if (currentPage.endsWith(linkPath)) {
                link.classList.add("active");
                link.setAttribute("aria-current", "page");
            } else {
                link.classList.remove("active");
                link.removeAttribute("aria-current");
            }
        });
    });
</script>