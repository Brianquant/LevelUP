<script>
    document.addEventListener('DOMContentLoaded', function () {
        var currentPage = window.location.pathname;
        const button = document.getElementById('logoutButtonNav');
            button.addEventListener('click', function(e) {
            window.location.href = '/logout';
        });

        if (currentPage === '/login') {
            document.getElementById('logoutButtonNav').disabled = true;
            document.getElementById('logoutButtonNav').style.display = 'none';
        } else {
            document.getElementById('signupButtonNav').disabled = true;
            document.getElementById('signupButtonNav').style.display = 'none';
        }

        document.querySelectorAll(".nav-link").forEach((link) => {
            var linkPath = link.getAttribute("href");

            // Check if the current URL ends with the link's path
            if (currentPage.endsWith(linkPath)) {
                link.classList.add("active");
                link.setAttribute("aria-current", "page");
            } else {
                link.classList.remove("active");
                link.removeAttribute("aria-current");
            }
        });
    });
</script>