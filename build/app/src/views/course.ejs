<link href="../css/course.css" rel="stylesheet">
<link href="css/main.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<div class="container">
  <div class="row">  
  <% kursData.forEach(function(item) { %>
      <div class="col">    
        <div id="course" class="card" style="width: 18rem;">
          <% if (item.kurs_id === 1 || item.kurs_id === 3 || item.kurs_id === 5 || item.kurs_id === 7 || item.kurs_id === 9 || item.kurs_id === 11) { %>
          <img src="../assets/courses/course_1.jpg" class="card-img-top" alt="kurs">
          <% } %>
          <% if (item.kurs_id === 2 || item.kurs_id === 4 || item.kurs_id === 6 || item.kurs_id === 8 || item.kurs_id === 10 || item.kurs_id === 12) { %>
            <img src="../assets/courses/course_2.jpg" class="card-img-top" alt="kurs">
          <% } %>
          <% if (item.kurs_id === 13 || item.kurs_id === 14 || item.kurs_id === 15 || item.kurs_id === 16 || item.kurs_id === 17 || item.kurs_id === 18 || item.kurs_id === 19 || item.kurs_id === 20) { %>
            <img src="../assets/courses/course_2.jpg" class="card-img-top" alt="kurs">
          <% } %>
          <div class="card-body">
            <h5 class="card-header"><%= item.bezeichnung %></h5>
          </div>
        </div>
      </div>
  <% }); %>
  </div>
</div>

<!-- Item-Modal -->
<div class="modal fade" id="ItemInfo" tabindex="-1" aria-labelledby="ItemInfoLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title fs-5" id="ItemInfoLabel"><% kursData.bezeichnung %></h4>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div id="item-details">
          <ul>
            <li>
              <p>LXP:</p>
            </li>
            <li>
              <p>Klassenlehrer:</p>
            </li>
            <li>
              <p>Klasse:</p>
            </li>
            <li>
              <p>Klausuren:</p>
            </li>
            <li>
              <p>Versp√§tungen:</p>
            </li>
            <li>
              <p>Link zum Moodle Kurs:</p>
            </li>
          </ul>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>