<link href="../css/course.css" rel="stylesheet">
<link href="css/main.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<div class="container">
  <div class="row">  
  <% kursData.forEach(function(item) { %>
      <div class="col">
        <a href="single-course?course_id=<%=item.kurs_id %>">
          <div id="course-<%=item.kurs_id %>" class="card course" style="width: 18rem;">
            <% if (item.kurs_id === 1 || item.kurs_id === 3 || item.kurs_id === 5 || item.kurs_id === 7 || item.kurs_id === 9 || item.kurs_id === 11) { %>
            <img src="../assets/courses/course_1.jpg" class="card-img-top" alt="kurs">
            <% } %>
            <% if (item.kurs_id === 2 || item.kurs_id === 4 || item.kurs_id === 6 || item.kurs_id === 8 || item.kurs_id === 10 || item.kurs_id === 12) { %>
              <img src="../assets/courses/course_2.jpg" class="card-img-top" alt="kurs">
            <% } %>
            <% if (item.kurs_id === 13 || item.kurs_id === 14 || item.kurs_id === 15 || item.kurs_id === 16 || item.kurs_id === 17 || item.kurs_id === 18 || item.kurs_id === 19 || item.kurs_id === 20) { %>
              <img src="../assets/courses/course_2.jpg" class="card-img-top" alt="kurs">
            <% } %>
            <div class="card-body">
              <h5 class="card-header"><%= item.bezeichnung %></h5>
            </div>
          </div>
        </a>
      </div>
  <% }); %>
  </div>
</div>
<script src="../js/course.js"></script>