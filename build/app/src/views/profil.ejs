<style>
    dialog::backdrop {
  background: rgba(40, 6, 63, 0.65);
}
.blur {
  -webkit-filter: blur(2px);
  -moz-filter: blur(2px);
  -o-filter: blur(2px);
  -ms-filter: blur(2px);
  filter: blur(2px);
}
</style>

<script src="./js/profile.js"></script>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="profile-pictures"
                                class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4 id="username"><%= user.username %></h4>
                                <button class="btn btn-outline-primary">Message</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nachname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.lastname %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Vorname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.firstname %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Klasse</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.grade %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Klassenlehrer</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.teacher %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Rolle</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.role %>
                            </div>
                        </div>
                        <hr>
                        <input class="btn btn-primary text-center" id="profilBearbeitenDialogS" value="Daten ändern" readonly/>
                        <!--data-bs-toggle="modal" data-bs-target="#profilBearbeiternModal"-->
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i
                                    class="material-icons text-info mr-2">Kurs level</h6>
                                <% courses.forEach(function(course) { %>
                                    <small><%= course.bezeichnung %></small><small style="float:inline-end">LVL: ?</small>
                                    <div class="progress mb-3" style="height: 10px">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: <%= course.exp %>%" 
                                            aria-valuenow="<%= course.exp %>" aria-valuemin="0" aria-valuemax="100"><%= course.exp %></div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <dialog id="chProfileDialog" style="background-color: #08004e;">
        <h2>Profil bearbeiten</h2>
        <p>Hier können Sie ihren Benutzernamen und/oder ihr Passwort ändern.</p>
        <div class="table table-responsive-md needs-validation">
            <div class="form-outline mb-4">
                <label class="col-form-label float-start" for="newNameDialog">Benutzername:</label>
                <input type="text" id="newNameDialog" class="form-control form-control-lg no-margin"/>
            </div>

            <div class="form-outline mb-4">
                <label class="col-form-label float-start" for="oldPwdDialog">Passwort:</label>
                <input type="password" id="oldPwdDialog" class="form-control form-control-lg no-margin" required/>
                <div class="invalid-feedback">
                    Üngülitges Passwort.
                </div>
            </div>

            <div class="form-outline mb-4">
                <label class="col-form-label float-start" for="newPwdDialog">Neues Passwort:</label>
                <input type="password" id="newPwdDialog" class="form-control form-control-lg no-margin"/>
                <div class="invalid-feedback">
                    Passwörter stimmen nicht überein.
                </div>
            </div>

            <div class="form-outline mb-4">
                <label class="col-form-label float-start" for="newPwdConfimationDialog">Passwort bestätigen:</label>
                <input type="password" id="newPwdConfimationDialog" class="form-control form-control-lg no-margin"/>
            </div>

        </div>
        <div>
            <button class="btn btn-primary" id="cancelButtonDialog">Abbrechen</button>
            <button class="btn btn-primary" id="confirmBtnDialog">Best&auml;tigen</button>
        </div>
    </dialog>
</div>