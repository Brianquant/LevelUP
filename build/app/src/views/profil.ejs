<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="profile-pictures"
                                class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4><%= user.username %></h4>
                                <button class="btn btn-outline-primary">Message</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nachname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.lastname %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Vorname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.firstname %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Klasse</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.grade %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Klassenlehrer</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.teacher %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Rolle</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.role %>
                            </div>
                        </div>
                        <hr>
                        <input class="btn btn-primary text-center" value="Daten ändern" readonly data-bs-toggle="modal" data-bs-target="#profilBearbeiternModal"/>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i
                                    class="material-icons text-info mr-2">Kurs level</h6>
                                <% courses.forEach(function(course) { %>
                                    <small><%= course.bezeichnung %></small><small style="float:inline-end">LVL: ?</small>
                                    <div class="progress mb-3" style="height: 10px">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: <%= course.exp %>%" 
                                            aria-valuenow="<%= course.exp %>" aria-valuemin="0" aria-valuemax="100"><%= course.exp %></div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="profilBearbeiternModal" tabindex="-1" aria-labelledby="profilBearbeiternLabel" aria-hidden="true">
        <div class="modal-xl modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="profilBearbeiternLabel">Lagerortverwaltung</h1>
                    <input class="btn btn-close" readonly data-bs-dismiss="modal" />
                </div>
                <div class="modal-body" id="profilModalBodyContainer">
                    <div class="table table-responsive-md">
                        <div class="row">
                            <div class="col-md">
                                <label class="col-form-label float-end">Benutzername:</label>
                            </div>
                            <div class="col-md">
                                <input type="text" id="newNameModal" class="no-margin" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md">
                                <label class="col-form-label float-end">Passwort:</label>
                            </div>
                            <div class="col-md">
                                <input type="text" id="oldPwdModal" class="no-margin" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md">
                                <label class="col-form-label float-end">Neues Passwort:</label>
                            </div>
                            <div class="col-md">
                                <input type="text" id="newPwdModal" class="no-margin" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md">
                                <label class="col-form-label float-end">Passwort bestätigen:</label>
                            </div>
                            <div class="col-md">
                                <input type="text" id="newPwdConfimationModal" class="no-margin" />
                            </div>
                        </div>
                    </div>
    
                    <div class="modal-footer" style="display:block">
                        <button type="button" class="btn btn-secondary float-start" data-bs-dismiss="modal">Abbrechen</button>
                        <input class="btn btn-success float-end" readonly onclick="" value="Speichern" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>