<link href="css/highscore.min.css" rel="stylesheet">
<link href="css/main.min.css" rel="stylesheet">
<script src="/js/highscore.js"></script>
<h1>Highscore-Board</h1>
<div class="container" id="container">
    
  <div class="dropdown">
    <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    Kursauswahl: <%= sort %>
    </a>

    <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="highscore">Alle</a></li>
      <% kursData.forEach(function(row) { %>
        <li><a class="dropdown-item" href="highscore?sort=<%= row.bezeichnung %>"><%= row.bezeichnung %></a></li>
      <% }); %>
    </ul>
</div>

    <table class="content table text-center center mx-auto" >
        <thead>
          <tr>
            <th class="col-1">RANK</th>
            <th class="col-2">NAME</th>
            <th class="col-1">EXP</th>
          </tr>
        </thead>
        <tbody>
            <% var position = 1; %>
            <% userData.forEach(function(row) { %>
                <tr>
                  <td><%= position++ %>.</td>
                  <td><%= row.vorname %> <%= row.name %></td>
                  <td><%= row.exp %></td>
                </tr>
              <% }); %>
        </tbody>
      </table>
</div>