<script src="./js/login.js"></script>
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .image-blurred-edge {
        background-image: url('/assets/login_art.png');
        background-size: cover;
        background-repeat: no-repeat;
        box-shadow: 0 0 100px 100px #040026 inset;
    }
</style>
<section class="vh-100">
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <h1 class="text-center mb-4">Login</h1>
            <div class="col-md-8 col-lg-7 col-xl-6 image-blurred-edge">
                <img src="/assets/login_art.png"
                class="img-fluid" alt="login img" style="opacity: 0;">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form>
                    <form class="needs-validation" novalidate>
                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="login-username">Benutzername</label>
                            <input type="text" id="login-username" class="form-control form-control-lg" required/>
                        </div>
    
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="login-pwd">Passwort</label>
                            <input type="password" id="login-pwd" class="form-control form-control-lg" required/>
                            <div class="invalid-feedback">
                                Üngülitger Benutzername oder Passwort.
                            </div>
                        </div>
    
                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="login-remember" checked />
                                <label class="form-check-label" for="login-remember"> Remember me </label>
                            </div>
                            <a href="#!">Passwort vergessen?</a>
                        </div>
    
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Anmelden</button>
                        
                    </form>
                </form>
            </div>
        </div>
    </div>
</section>